<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:typeface">sans</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="toolbar_theme_white_back" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="toolbar_theme_dark_back" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/darkGray</item>
    </style>

    <style name="TextInputCustomStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/medium_light_gray</item>
        <item name="colorControlNormal">@color/colorPrimaryGreen</item>
        <item name="colorControlActivated">@color/colorPrimaryGreen</item>
        <item name="colorControlHighlight">@color/colorPrimaryGreen</item>
        <item name="boxStrokeColor">@color/colorPrimaryGreen</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>



    <style name="banner_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="banner_logo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily"></item>
    </style>

    <style name="banner_offer">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily"></item>
    </style>

    <style name="banner_btn">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="product_theme">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily"></item>
    </style>

    <style name="product_desc_theme">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily"></item>
    </style>

    <style name="HeeboTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/heebo</item>
    </style>

    <style name="DialogSlideAnim">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="slideUpDialog"></style>

    <style name="slideDownDialog"></style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">#80ffffff</item>
        <item name="android:bottomDark">#80ffffff</item>
        <item name="android:bottomMedium">#80ffffff</item>
        <item name="android:centerBright">#80ffffff</item>
        <item name="android:centerDark">#80ffffff</item>
        <item name="android:centerMedium">#80ffffff</item>
        <item name="android:fullBright">#80ffffff</item>
        <item name="android:fullDark">#80ffffff</item>
        <item name="android:topBright">#80ffffff</item>
        <item name="android:topDark">#80ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cart_quantity"></style>

    <style name="product_subtotal">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="discounted_subtotal">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/french_gray</item>
    </style>

    <style name="billing_table">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="sub_heading">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextInputAddressStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">1dp</item>


    </style>

    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="nick_name">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:background">@drawable/nick_name</item>

    </style>

    <style name="TransparentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="time_date_picker">
        <item name="colorAccent">@color/colorPrimaryGreen</item>
    </style>

    <style name="user_order_table">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="medium_title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="hint_text" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        android:id="@+id/category_cardview"
        android:layout_width="wrap_content"
        app:contentPadding="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/darkGray"
        android:outlineSpotShadowColor="@color/darkGray"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/logo_img"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp" />

            <com.utility.hapdelvendor.Utils.CircularTextView
                android:layout_toRightOf="@+id/logo_img"
                android:layout_toEndOf="@+id/logo_img"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:id="@+id/cat_disc"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="@dimen/_2sdp"
                android:text="10% Off"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_5ssp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/cat_name"
                android:layout_below="@+id/logo_img"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
